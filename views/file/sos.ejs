<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Emergency SOS</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(135deg, #1e1e1e 0%, #3a3a3a 100%);
            color: #e0e0e0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            overflow: hidden;
        }

        .marquee {
            position: absolute;
            top: 0;
            width: 100%;
            overflow: hidden;
            background-color: rgba(0, 0, 0, 0.7);
            color: red;
            padding: 10px;
            font-size: 1.5rem;
            text-align: center;
            z-index: 10;
        }

        .sos-alert {
            text-align: center;
            background: linear-gradient(135deg, #333, #444);
            border: 1px solid #555;
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
            padding: 30px;
            width: 90%;
            max-width: 700px;
            position: relative;
            z-index: 1;
        }

        h1 {
            color: #f56c6c;
            margin-bottom: 20px;
            font-size: 2.5rem;
            font-weight: bold;
            text-shadow: 0 0 10px rgba(255, 105, 97, 0.8);
        }

        p {
            margin-bottom: 20px;
            font-size: 1.1rem;
        }

        #emergency-number {
            font-size: 1.3rem;
            margin: 20px 0;
            font-weight: bold;
            color: red;
            text-shadow: 0 0 5px rgba(225, 225, 225, 0.1);
        }

        #start-button {
            padding: 15px 30px;
            border: none;
            border-radius: 8px;
            background: linear-gradient(135deg, #3498db, #2980b9);
            color: #ffffff;
            font-size: 1.1rem;
            cursor: pointer;
            transition: background 0.3s ease, transform 0.2s ease;
            margin-top: 20px;
        }

        #start-button:hover {
            background: linear-gradient(135deg, #2980b9, #3498db);
            transform: scale(1.05);
        }

        #video-container {
            position: relative;
            display: flex;
            justify-content: center;
            margin: 20px 0;
        }

        video {
            width: 100%;
            max-width: 600px;
            border: 2px solid #444;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
        }

        #icon-container {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: rgba(43, 43, 43, 0.9);
            border-radius: 50%;
            padding: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
        }

        .fa-user {
            font-size: 60px;
            color: #3498db;
        }
    </style>
</head>
<body>
    <div class="marquee">
        <marquee behavior="scroll" direction="left">⚠️ Emergency Alert: Please stay calm and follow the instructions! ⚠️</marquee>
    </div>

    <section class="sos-alert">
        <h1>Emergency SOS Activated!</h1>
        <p>Your location has been shared with the emergency services.</p>
        <p>If you need immediate assistance, please call the emergency number below:</p>

        <div id="emergency-number">
            <strong>Emergency Number: <span id="number"><%= emergencyNumber %></span></strong>
        </div>

        <button id="start-button" onclick="startVideo()">Video Chat</button>

        <div id="video-container">
            <video id="localVideo" autoplay muted></video>
            <div id="icon-container">
                <i class="fa-solid fa-user"></i>
            </div>
        </div>
    </section>

    <script src="/public/js/callcenter.js"></script> <!-- Make sure to include your call center JS file -->

    <script>
        async function startVideo() {
            const localVideo = document.getElementById('localVideo');

            try {
                // Access the user's camera
                const stream = await navigator.mediaDevices.getUserMedia({ video: true });
                localVideo.srcObject = stream;

                // Fetch and display the emergency number based on the user's state
                const userState = await getUserState(); // Function to get the user's state
                const userEmergencyNumber = getEmergencyNumber(userState);
                document.getElementById("number").innerText = userEmergencyNumber; // Display the number

                // Hide the user icon once video is active
                document.getElementById("icon-container").style.display = 'none';
            } catch (error) {
                console.error('Error accessing media devices.', error);
                alert('Unable to access your camera. Please allow camera access in your browser settings.');
            }
        }

        async function getUserState() {
            // This function should determine the user's state based on their location.
            // For demo purposes, we will return a hardcoded state.

            // In a real implementation, you would use geolocation to determine the user's state.
            return "Karnataka"; // Replace this with actual logic to determine the user's state
        }

        function getEmergencyNumber(state) {
            const emergencyNumbers = {
                Karnataka: "080-22340676",
                Maharashtra: "022-27601150",
                Delhi: "011-100",
                // Add numbers for other states here
            };

            return emergencyNumbers[state] || "Emergency number not available";
        }
    </script>
</body>
</html>
